<p id="notice"><%= notice %></p>

<p>
  <strong>Startdatum:</strong>
  <%= german_day @semester_break_plan.start %>
</p>

<p>
  <strong>Enddatum:</strong>
  <%= german_day @semester_break_plan.end %>
</p>

<p>
  <strong>Bezeichnung:</strong>
  <%= @semester_break_plan.name %>
</p>

<%= form_for @semester_break_plan do |form| %>
  <div class="table-responsive">
    <table class="table table-hover table-bordered">
      <tr>
        <th colspan=1>Optionen</th>
        <th colspan=1>Datum</th>
        <% @users.each do |user| %>
          <th colspan=1>
            <div title=<%= user.get_name_or_alias %>><%= user.get_initial %> </div>
          </th>

        <% end %>

      </tr>
      <%= form.fields_for(:day_slots) do |form2| %>
      <% p form2.object %>
        <tr>
          <td><%= link_to 'Feiertag/BrÃ¼ckentag',  {:controller => "day_slots", :action => 'destroy', :id => form2.object.id, plan_id: @semester_break_plan.id}, :confirm => "Sind Sie sicher?", :method => :delete, class: "btn btn-sm btn-warning"  %></td>
          <td> <%= german_day form2.object.start %></td>
          <%= form2.fields_for(:semester_break_plan_connections) do |form3| %>
            <td>
              <%= form3.number_field :availability  %>
                
              </td>
          <% end %>
        </tr>
      <% end %>
    </table>
  </div>
  <%= form.submit "Plan speichern", class: "brn btn-lg btn-success" %>
<% end %>
