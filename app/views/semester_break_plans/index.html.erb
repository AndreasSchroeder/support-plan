<p id="notice"><%= notice %></p>

<h1>Semester Break Plans</h1>

<table>
  <thead>
    <tr>
      <th>Start</th>
      <th>End</th>
      <th>Name</th>
      <th>Free</th>
      <th>Solution</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @semester_break_plans.each do |semester_break_plan| %>
      <tr>
        <td><%= semester_break_plan.start %></td>
        <td><%= semester_break_plan.end %></td>
        <td><%= semester_break_plan.name %></td>
        <td><%= semester_break_plan.free %></td>
        <td><%= semester_break_plan.solution %></td>
        <td><%= link_to 'Show', semester_break_plan %></td>
        <td><%= link_to 'Edit', edit_semester_break_plan_path(semester_break_plan) %></td>
        <td><%= link_to 'Destroy', semester_break_plan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

